<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_color"
        android:layout_alignParentLeft="true"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
    />
    <TextView
        android:id="@+id/message_color_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_color_points"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
    />

    <LinearLayout
        android:id="@+id/button_fixes"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_color_points"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding">

        <Button
            android:onClick="handle3Fix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_3fix"
            />

        <Button
            android:onClick="handle2Fix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_2fix"
            />

        <Button
            android:onClick="handle1Fix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_1fix"
            />
        <Button
            android:onClick="handle0Fix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_0fix"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/message_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_distances"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_fixes"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        />

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_below="@id/message_distance"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:id="@+id/table">

        <TableRow
            android:background="@color/colorTableHeader">

            <TextView
                android:layout_weight="0.25"
                android:text="" />

            <TextView
                android:layout_weight="0.45"
                android:gravity="center_horizontal"
                android:text="@string/col_distance" />

            <TextView
                android:layout_weight="0.30"
                android:gravity="center_horizontal"
                android:text="@string/col_points" />
        </TableRow>

        <TableRow
            android:paddingTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="@string/label_near"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_near"
                android:layout_weight="0.45"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/message_near_points"
                android:layout_weight="0.30"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/message_distance_points"/>
        </TableRow>
        <TableRow
            android:paddingTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="@string/label_far"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_far"
                android:layout_weight="0.45"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/message_far_points"
                android:layout_weight="0.30"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/message_distance_points"/>
        </TableRow>
        <TableRow
            android:paddingTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="@string/label_home"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_home"
                android:layout_weight="0.45"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/message_home_points"
                android:layout_weight="0.30"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/message_distance_points"/>
        </TableRow>
        <TableRow
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="wrap_content"
                android:text=""/>
            <Button
                android:onClick="handleUpdate"
                android:layout_width="0dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:text="@string/button_update"
                />

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/wb_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_white_black"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/message_wbpoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_wb_points"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wb_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:layout_below="@id/wb_text">
        <Button
            android:onClick="handlewbFailure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_wb_failure"
            />

        <Button
            android:onClick="handlewbSuccess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_wb_success"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/message_total_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_total_points"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/wb_buttons"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        />
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/wb_buttons"
        android:paddingTop="35dp"
        android:paddingBottom="@dimen/padding"
        android:gravity="center_horizontal">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text=""/>
            <Button
                android:layout_marginRight="10dp"
                android:onClick="handleReset"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:text="@string/button_reset"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>